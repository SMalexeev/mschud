@using MSChud.Models
@model PlayerNeeds
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<script src="~/js/signalr.js"></script>
<script src="~/js/controllerhub.js"></script>

<div class="hud">

    <div>
        <span class="dayofweek rectangle">@PlayerNeeds.DayOfWeek</span>
        <div class="progress">
            <div class="progress-bar" id="Thirst" role="progressbar" style="width: @PlayerNeeds.Thirst" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="progress">
            <div class="progress-bar" id="Hunger" role="progressbar" style="width: @PlayerNeeds.Hunger" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="progress">
            <div class="progress-bar" id="Stress" role="progressbar" style="width: @PlayerNeeds.Stress" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="progress">
            <div class="progress-bar" id="Urine" role="progressbar" style="width: @PlayerNeeds.Urine" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="progress">
            <div class="progress-bar" id="Fatigue" role="progressbar" style="width: @PlayerNeeds.Fatigue" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="progress">
            <div class="progress-bar" id="Dirtiness" role="progressbar" style="width: @PlayerNeeds.Dirtiness" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="rectangle">
            <span class="money" id="Money">@PlayerNeeds.Money</span>
        </div>
    </div>

    <div class="needstext">
        <span class="playerneeds">ЖАЖДА</span>
        <span class="playerneeds">ГОЛОД</span>
        <span class="playerneeds lettering">СТРЕСС</span>
        <span class="playerneeds">НУЖДА</span>
        <span class="playerneeds lettering">УСТАЛОСТЬ</span>
        <span class="playerneeds lettering">ГИГИЕНА</span>
        <span class="playerneeds lettering">ДЕНЬГИ</span>
    </div>
</div>

<div>
    <span class="task" id="Task">@PlayerNeeds.Task</span>
</div>