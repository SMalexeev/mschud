@{
    Layout = null;
}
@using MSChud.Models
@model PlayerNeeds
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<script src="~/js/signalr.js"></script>
<script src="~/js/controllerhub.js"></script>

<body class="panel w-auto h-auto">
    <div class="admin-panel">
        <div>
            <span>Жажда:</span>
            <span id="thirstCount">@PlayerNeeds.Thirst </span>
            <br />
            <button onclick="thirstminus1()">-1</button>
            <button onclick="thirstminus10()">-10</button>
            <button onclick="thirst0()">0</button>
            <button onclick="thirst1()">+1</button>
            <button onclick="thirst10()">+10</button>
            <button onclick="thirst100()">100</button>
            <br />
            <input id="thirstValue" value="0" type="number" min="0" max="100" />
            <button onclick="thirstCustom()">Ввести</button>
        </div>
        <div>
            <span>Голод:</span>
            <span id="hungerCount">@PlayerNeeds.Hunger</span>
