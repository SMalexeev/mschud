            <button onclick="minusmoney50()">-50</button>
            <button onclick="money0()">0</button>
            <button onclick="money50()">+50</button>
            <button onclick="money100()">+100</button>
            <button onclick="money1000()">+1000</button>
            <br />
            <input id="moneyValue" value="0" type="number" min="0" />
            <button onclick="moneyCustom()">Ввести</button>
        </div>
        <div>
            <span>Задача: </span>
            <span id="taskTask">@PlayerNeeds.Task</span>
            <br />
            <input id="taskText" type="text" />
            <button onclick="taskSet()">Ввести</button>
        </div>
